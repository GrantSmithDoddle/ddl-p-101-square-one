---
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../styles/base.scss';
import '../styles/critical.scss';

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<!DOCTYPE html>
<html lang='en-GB'>
  <head>
    <BaseHead {...seo} />
  </head>
  <body>
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TGZ44X3" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <Header />
    <main id='main'>
      <slot />
    </main>
    <Footer />
  </body>
</html>