---
import data from '../data/companyData.json';

import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../styles/base.scss';
import '../styles/critical.scss';

export interface Props {
  addressLine1?: string;
  addressLine2?: string;
  city?: string;
  companyName?: string;
  companyTagline?: string;
  email?: string;
  metaImageAlt?: string;
  phone?: string;
  postcode?: string;
  seo?: BaseHeadProps;
}

const { addressLine1, addressLine2, city, companyName, companyTagline, email, metaImageAlt, phone, postcode, seo } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang='en-GB'>
  <head>
    <BaseHead {...seo} />
  </head>
  <body>
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TGZ44X3" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <Header
      alt={data.metaImageAlt}
      phone={data.phone}
    />
    <main id='main'>
      <slot />
    </main>
    <Footer
      addressLine1={data.addressLine1}
      addressLine2={data.addressLine2}
      alt={data.metaImageAlt}
      city={data.city}
      companyName={data.companyName}
      companyTagline={data.companyTagline}
      email={data.email}
      phone={data.phone}
      postcode={data.postcode}
    />
  </body>
</html>